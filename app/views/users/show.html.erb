<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= flash[:notice] %>
      <%= render 'layouts/user', user: @user, book: @book %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h1>Books</h1>
        <table>
          <tr>
            <td>Title</td>
            <td>Opinion</td>
          </tr>
          <tr>
        <% @user.books.each do |book| %>
          <tr>
            <%= link_to book.user do %>
            <td><%= image_tag @user.get_profile_image(150,150) %></td>
            <% end %>
         　　<td><%= link_to book.title, book_path(book) %></td>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
          </tr>
        <% end %>
        </table>
    </div>
  </div>
</div>